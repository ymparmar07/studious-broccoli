1. Write a program to calculate sum of first N natural numbers

#include <stdio.h>

void main() {
	int i,count=0;
for(i=1;i<=10;i++){
	count+=i;
	printf("\n %d",i);
	}
	printf("\n sum of first N natural number is :%d",count);
}

2. Write a program to calculate sum of first N even natural numbers

#include <stdio.h>

void main() {
	int i,count=0;
for(i=1;i<=20;i++){
	if(i%2==0){
		count+=i;
		printf("\n %d",i);
		}
	}
	printf("\n sum of first N even natural number is :%d",count);
}

3. Write a program to calculate sum of first N odd natural numbers

#include <stdio.h>

void main() {
	int i,count=0;
for(i=1;i<=20;i++){
	if(i%2!=0){
		count+=i;
		printf("\n %d",i);
		}
	}
	printf("\n sum of first N odd natural number is :%d",count);
}

4. Write a program to calculate sum of squares of first N natural numbers

#include <stdio.h>

void main() {
	int i,count=0;
for(i=1;i<=10;i++){
	printf("\n %d",i*i);
	count+=i*i;
	}
	printf("\n sum of square of first N natural number is :%d",count);
}
5. Write a program to calculate sum of cubes of first N natural numbers

#include <stdio.h>

void main() {
	int i,count=0;
for(i=1;i<=10;i++){
	printf("\n %d",i*i*i);
	count+=i*i*i;
	}
	printf("\n sum of cube first N natural number is :%d",count);
}
6. Write a program to calculate factorial of a number

#include <stdio.h>

void main() {
 int i,n,count=1;
 printf("\n enter number:");
 scanf("%d",&n);
	for(i=1;i<=n;i++){
		printf("\n %d",i);
		count*=i;
		}
	printf("\n factorial number is :%d",count);
}

7. Write a program to count digits in a given number
#include <stdio.h>  
int main()  
{  
   int n; 
   int count=0;  
   printf("Enter a number");  
   scanf("%d",&n);  
   while(n!=0)  
   {  
       n=n/10;  
       count++;  
   }  
     
   printf("\nThe number of digits in an integer is : %d",count);  
    return 0;  
}  

8. Write a program to check whether a given number is a Prime number or not
#include <stdio.h>

void main() {
 int i,n,prime=0;
 
 printf("\nenter number:");
 scanf("%d",&n);
 
	for(i=2;i<=n/2;i++){
		
		if(n%i==0){
			prime=1;
			break;
			}		
		}	
	if(prime==0 && n>1){
		printf("%d is prime number",n);
	}else{
		printf("%d is not prime number",n);
	}	
}

9. Write a program to calculate LCM of two numbers
#include <stdio.h>

int main() {

    int n1, n2, max;

    printf("Enter two positive integers: ");
    scanf("%d %d", &n1, &n2);

    max = (n1 > n2) ? n1 : n2;

    while (1) {
        if ((max % n1 == 0) && (max % n2 == 0)) {
            printf("The LCM of %d and %d is %d.", n1, n2, max);
            break;
        }
        ++max;
    }
    return 0;
}
10. Write a program to reverse a given number
int main ()
{
  int n, reverse = 0, rem;
  
  printf("The number is: \n");
  scanf("%d",&n);  
 

    while(n != 0)
    {
      rem = n % 10;
      reverse = reverse * 10 + rem;
      n /= 10;
    }
 

  printf("Reverse: %d\n",reverse);
  
  return 0;
}
